<!doctype html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Programa P</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body class="container" style="margin-top: 50px;">
    <h2>ProgramaP</h2>
    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert">
            <%- messages.success %>
        </div>
        <% } %>

            <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%- messages.error %>
                </div>
                <% } %>

                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-pills w-100">
                                <li class="nav-pill active">
                                    <a class="nav-link">
                                        <h4>ProgramaP's cadastrados</h4>
                                    </a>
                                </li>
                                <li class="nav-pill ml-auto">
                                    <a class="btn btn-warning" href="../programa_p/adicionar">Inserir ProgramaP</a>
                                </li>
                            </ul>
                        </div>
                        <!-- FETCH REGISTROS em consultas coletivas -->
                        <div class="card-body">
                            <% if(dataProduto.length) { %>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">codigo_p</th>
                                            <th scope="col">dt_implementacao</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- para todos os registros do query data, incrementar um contador -->
                                        <% for(var i=0; i< dataProduto.length; i++) { %>
                                            <tr>
                                                <th scope="Linha">
                                                    <%= (i+1) %>
                                                </th>
                                                <td>
                                                    <%= dataProduto[i].codigo_p %>
                                                </td>
                                                <td>
                                                    <%= dataProduto[i].dt_implementacao %>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                                <% } %>
                                    <!-- se resultado vazio da query data -->
                                    <% if(!dataProduto.length) { %>
                                        <p class="text-center">ProgramaP('s) n√£o encontrado(s)!</p>
                                        <% } %>
                        </div>
                    </div>
</body>

</html>